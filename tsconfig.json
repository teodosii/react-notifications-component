{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // samples project
      "samples/*": ["samples/*"],
      "components/*": ["samples/js/components/*"],

      // library
      "src/*": ["src/*"]
    },

    "declaration": true,
    "noImplicitReturns": false,
    "alwaysStrict": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": true,
    "maxNodeModuleJsDepth": 0,
    "module": "es6",
    "esModuleInterop": true,

    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es2015",

    "outDir": "dist/js"
  },

  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./samples/**/*.ts",
    "./samples/**/*.tsx",
    "global.d.ts",
    "global_modules.d.ts"
  ],
  "exclude": [
    "./src/**/*.js",
    "./node_modules",
    "./build",
    "./samples",
    "./dist",
    "*.js"
  ]
}